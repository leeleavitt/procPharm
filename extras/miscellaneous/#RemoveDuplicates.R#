#removes duplicated sequence from infile and writes out only
#the unique sequences to outfile.
#The first occrance of the unique sequence is selected.
#Sequence names are not considered.
#must specify sequence type "DNA" or peptide "AA"
#infile must exist
#outfile is overwritten if it exists.
#by default sequences will be written with 60 chars/row.
RemoveDuplicates <- function(infile,outfile,seqtype="DNA")
{
	in.fa <- read.fasta(infile,seqtype=seqtype,strip.desc=F,forceDNAtolower=F)
	gs <- sapply(in.fa,c2s)
	gi <- match(unique(gs),gs)
	num.rm <- length(gs) - length(gi)
	print(paste(num.rm,"Duplicates"))
	out.fa <- in.fa[gi]
	write.fasta(out.fa,names(out.fa),file.out=outfile)
}


